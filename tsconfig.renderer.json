{
  "include": [
    "src/renderer/**/*.tsx",
    "src/renderer/**/*.ts",
    "src/renderer/**/*.d.ts",
    "src/renderer/global.ts",
    "src/renderer/global.d.ts",
    "src/store/**/*",
    "src/preload/preload.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "declarationDir": "./types",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@store/*": [
        "src/store/*"
      ],
      "@components": [
        "src/renderer/components/index.ts"
      ],
      "@components/*": [
        "src/renderer/components/*"
      ],
      "@constant": [
        "src/renderer/constant.ts"
      ],
      "@style/*": [
        "src/renderer/style/*"
      ],
      "@webviews/*": [
        "src/renderer/webviews/*"
      ]
    }
  }
}