{
  "include": [
    "src/main/**/*.ts",
    "src/preload/**/*.ts",
    "src/store/**/*.ts",
  ],
  "exclude": [
    "renderer/**/*"
  ],
  "compilerOptions": {
    "types": [
      "node"
    ],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "baseUrl": "."
  }
}