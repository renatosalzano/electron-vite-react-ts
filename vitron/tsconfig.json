{
  "compilerOptions": {
    "target": "esnext",                            
    "module": "nodenext",   
    "jsx": "react-jsx",                       
    "esModuleInterop": true,                       
    "strict": true,                                
    "skipLibCheck": true,                          
    "declaration": true,

    "baseUrl": ".",

    "rootDir": "./src",                            
    "outDir": "./dist",                            

    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,                            
    "removeComments": true,
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "global.d.ts"
  ]                         
}